{
  "name"			: "MM_Heartbeat",
  "script"			: "app.js",
  "args"			: "heartbeat",
  "cwd"				: "/disk/www/Messager",
  "instances"		: "2",
  "exec_mode"		: "cluster",
  "error_file"		: "./logs/wx_heartbeat_err.log",
  "out_file"		: "./logs/wx_heartbeat_out.log",
  "merge_logs"		: true,
  "autorestart"		: true,
  "watch"			: true,
  "ignore_watch"	: ["logs",".git","*.gitlock","node_modules"],
  "watch_options"	: {
	"followSymlinks": false
  },
  "log_date_format" : "YYYY-MM-DD"
}